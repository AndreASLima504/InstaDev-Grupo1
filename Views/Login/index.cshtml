@model Usuario
@{
    ViewData["Title"] = "Login";
}
<main class="pagLogin">
        <div class="container">
            <section class="bloco_principal">
                <div class="Logo">
                    <img class="LogoInstadev" src="Imagens/Instadev.png" alt="LogoInstadev">
                    <span>Cadastre-se para ver fotos e vídeos dos seus amigos.</span>
                </div>
                <form method="POST" action='@Url.Action("Logar")' class="informacoes">
                    <input name="Email" type="text" placeholder="  Email">
                    <input name="Senha" type="password" placeholder="  Senha">
                    <button class="botao_logar" type="submit">Entrar</button>
                    <div class="erro">@TempData.Peek("Mensagem")</div>
                </form>
                <div class="ou"><div><hr></div><span>OU</span><div><hr></div></div>
                <a href="">Esqueceu a senha?</a>
                
            </section>
            <section class="logar"><span>Não tem uma conta? <a class="conectar" asp-area="" asp-controller="Home" asp-action="Index">Cadastre-se</a></span></section>
            <section class="obtenha">
                <span>Obtenha o aplicativo.</span>
                <div class="Baixar">
                    <img src="Imagens/app_store 1.png" alt="ImagemAppStore">
                    <img src="Imagens/google_play 1.png" alt="GooglePlay">
                </div>
            </section>
        </div>
    </main>